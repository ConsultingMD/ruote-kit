%h1 errors

.flash
  .message
    .notice
      %p
        = pagination_position

%table.list
 
  %thead
    %td
      error
    %td
      process
    %td
      message
    %td
      at
    %td
      action

  - @errors.each do |error|
    %tr
      %td
        = alink(:errors, error.fei.sid)
      %td
        = alink(:errors, error.wfid)
      %td
        &= error.message
      %td
        = Time.parse(error.at).localtime.strftime('%Y/%m/%d %H:%M:%S')
      %td
        &= error.action


