      #header

        %h1 ruote-kit

        #main-navigation
          %ul
            = navigate_to "processes", "/_ruote/processes"
            = navigate_to "expressions", "/_ruote/expressions"
            = navigate_to "workitems", "/_ruote/workitems"
            = navigate_to "errors", "/_ruote/errors"

      #wrapper
        #main
          = yield

